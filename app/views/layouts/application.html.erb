<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>     <!--Einsetzen der vorher definierten Methode title-->
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>    <!--Partial: Verweis auf die Datei stylesheet und deren Inhalt-->
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>

<%= javascript_include_tag :defaults %>