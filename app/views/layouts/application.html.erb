<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>     <!--Einsetzen der vorher definierten Methode title-->
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>    <!--Partial: Verweis auf die Datei stylesheet und deren Inhalt-->
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>       <!--Partial: Verweis auf die Datei header und deren Inhalt-->
      <section class="round">
        <%= yield %>    <!--Einbindung der Inhalte der Pages-->
      </section>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
